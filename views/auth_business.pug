<div class="container-fluid">
  .container
    p
    p
    p CityService
    h1.h2.mb-5
      | Business Application 
    a(class="btn btn-block" href="/customer")  Back to account
    form(method="post" action='/auth_business')
      div(class="text-center") #{error}
      .row.form-block
        .col-lg-4
          h4 Basic
          p.text-muted.text-sm
            | Business information
        .col-lg-7.ml-auto
          .form-group
          .form-group
            label(for='company_name') Company name
            input(type="company_name" class="company_name" id="company_name" name="company_name")
          .form-group
            label(for='type') Service type
            div(class="form-group")
                    select(name='type' type="type" class="type" id="type")
                        option(value='cleaning') Cleaning
                        option(value='moving') Moving
                    br
      .row.form-block
        .col-lg-4
          h4 Licence
          p.text-muted.text-sm
            | Licence submission
        .col-lg-7.ml-auto
          .form-group
            label(for="img-front") Front licence
            input(type="file" class="form-control" name="img-front" id="img-front" accept="image/*")
          div(class="collapse show multi-collapse" id="collapseBackImg")
            label(for="img-back") Back licence
            input(type="file" class="form-control" name="img-back" id="img-back" accept="image/*")
      .row.form-block
        .col-lg-4
          h4 Location
          p.text-muted.text-sm
            | Service Location
        .col-lg-7.ml-auto            
          // Street
          .form-group
            label(for='address') Street Address
            input(type="address" class="form-control" id="address" name="address")
          .form-group
            label(for='city') City
            input(type="city" class="form-control" id="city" name="city")
      .row.form-block.flex-column.flex-sm-row
        .col.text-center.text-sm-left
        .col.text-center.text-sm-right
        a(class="btn btn-block" href="/customer") Back to account
        button(type="submit" class="btn btn-primary btn-block" value="Submit" ) Submit
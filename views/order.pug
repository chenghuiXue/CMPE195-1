doctype html
html(lang="en")

head
	title Order
	meta(charset="utf-8")
	meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
	link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
	script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js")
	script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js")
	script(src="js/jquery.backstretch.min.js")

body

	<nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
	<a class="navbar-brand col-sm-3 col-md-2 mr-0" href="/">CityService</a>
		<ul class="navbar-nav px-3">
			<li class="nav-item text-nowrap">
				<a class="nav-link" href="/logout">Log out</a>
			</li>
		</ul>
	</nav>
		
	br
	<div class="container" style="margin-top:80px"></div>
	if !user_order
		h1(class="text-center") Order fails...Please check again later!
	else
		h1(class="text-center") Order Successful!
		h2(class="text-center") Here is your order details:
		br
		h5(class="text-center") Your order ID is #{user_order._id}
		br
		h6(class="text-center") Order name: #{user_order.ordername}
		h6(class="text-center") Order type: #{user_order.ordertype}
		h6(class="text-center") Company you ordered from: #{user_order.company}
		h6(class="text-center") Order Statue: #{user_order.Order_status}
		br
		br

		a(class="btn btn-block" href='/customer') Go to my Dashboard
	a(class="btn btn-block" href='/') Back
	

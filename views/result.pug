doctype html
html(lang="en")

head
	title Result
	meta(charset="utf-8")
	meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
	link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
	script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js")
	script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js")
	script(src="js/jquery.backstretch.min.js")

body

	nav(class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top main-nav")
		button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar")
			span(class="navbar-toggler-icon")
		div(class="mx-auto")
			a(class="navbar-brand" href="/") CityService
		div(class="collapse navbar-collapse" id="collapsibleNavbar")
			ul(class="nav navbar-nav flex-fill justify-content-center")
		
	br
	<div class="container" style="margin-top:80px"></div>

	h1(class="text-center") Search Results 

	
	div(class="container" style="margin-top:80px")
		div(class="row")
			div(class="col-sm-2")
			div(class="col-sm-8") 
				br
				div
					if results.length != 0
						table(style="width:100%")
							tr
								th Type
								th city
								th company_name
								th address
								th  
							<!-- if results -->
								each result in results
									tr
										td #{result.type}
										td #{result.city}
										td #{result.company_name}
										td #{result.address}
										if isAuthenticated 	
											td 
												a(href=`/order/${result.type}/${result._id}/${result.company_name}` class="btn btn-primary") order
										else 
											td
												a(href="/login" class="btn btn-primary") Please Login here
					else
						h4(class="text-center") Sorry, no matching results
						br
						a(class="btn btn-block" href='/') Back
							//- <br><br>
							//- div(class="col-sm-2")